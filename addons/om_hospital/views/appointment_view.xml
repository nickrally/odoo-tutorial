<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="ref"/>
                <field name="country"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
                <field name="apt_ref"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable': '1'}" statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div>
                            <field name="priority" widget="priority"/>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender"/>
                            <field name="ref"/>
                            <field name="country"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="booking_date"/>
                            <field name="apt_ref"/>
                            <button name="action_test" string="Object Button" type="object" class="oe_highlight"/>
                            <button name="%(om_hospital.action_hospital_patient)d" string="Action Button" type="action" class="oe_highlight"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <group>
                                <field name="prescription" placeholder="Enter perscription"/>
                            </group>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name="booking_date" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first appointment
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              action="action_hospital_appointment"
              name="Appointments"
              parent="menu_appointment_master"
              sequence="10"/>
</odoo>