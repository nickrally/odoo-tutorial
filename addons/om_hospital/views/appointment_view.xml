<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-info="state in ('draft','in_consultation')"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancel'"
                  sample="1"
                  multi_edit="1">
                <field name="patient_id"/>
                <field name="gender" optional="hide"/>
                <field name="ref" optional="show"/>
                <field name="country" optional="hide"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
                <field name="apt_ref" optional="hide"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-info="state in ('draft','in_consultation')"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="cancel_appointment"
                                    string="Cancel"
                                    confirm="Are you sure you want to cancel?"
                                    type="object"
                                    class="oe_highlight"
                                    states="draft,in_consultation"/>
                    <button name="reset_to_draft"
                                    string="Draft"
                                    confirm="Are you sure you want to reset to draft?"
                                    type="object"
                                    class="oe_highlight"
                                    states="cancel"/>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable': '1'}" statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div>
                            <field name="priority" widget="priority"/>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender"/>
                            <field name="ref"/>
                            <field name="country"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="booking_date" default_focus="1"/>
                            <field name="apt_ref"/>
                            <button name="%(om_hospital.action_hospital_patient)d"
                                    string="Action Button" type="action"
                                    help="Redirect to Patients view"
                                    confirm="Are you sure?" class="oe_highlight"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <group>
                                <field name="prescription"
                                       placeholder="Enter perscription"
                                       options="{'collaborative': true, 'resizable': true}" />
                            </group>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name="pharmacy_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="price_unit"/>
                                        <field name="qty"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="price_unit"/>
                                            <field name="qty"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first appointment
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              action="action_hospital_appointment"
              name="Appointments"
              parent="menu_appointment_master"
              sequence="10"/>
</odoo>