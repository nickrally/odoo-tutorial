<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_patient_id_card">
    <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                <div class="page">
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-2" style="margin:auto;">
                        </div>
                        <center>
                            <div class="col-xs-8" style="margin:auto">
                                <table class="table table-condensed" style="border: 3px solid black !important;">
                                    <tr>
                                        <td width="40%">
                                            <p style="text-align:center;padding-top:10px;">
                                                <img t-if="not o.image" t-att-src="'/web/static/src/img/placeholder.png'" height="120" border="1" width="120"/>
                                                <img t-if="o.image" t-att-src="'data:image/png;base64,%s' % to_text(o.image)" height="120" border="1" width="120"/>
                                            </p>
                                            <p style="text-align:center;">
                                                <h2><strong><span t-field="o.name"/></strong></h2>
                                            </p>
                                        </td>
                                        <td width="60%">
                                            <table>
                                                <tr>
                                                    <td>
                                                        <p style="text-align:right;"><strong>Age: </strong></p>
                                                    </td>
                                                    <td>
                                                        <p style="text-align:left;padding-left:10px;"  t-field="o.age"/>

                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </center>
                        <br/>
                        <t t-if="o.primary_doctor_id">
                            <h3>Primary Doctor</h3>
                            <table class="tale table-sm o_main_table" name="primary_doctor">
                                <thead>
                                    <tr>
                                        <th name="th_doctor" class="text_left"><span>Primary Doctor</span></th>
                                        <th name="th_ref" class="text_left">Patient ref</th>
                                    </tr>
                                </thead>
                                <tr>
                                    <td>
                                        <span t-field="o.primary_doctor_id"/>
                                    </td>
                                    <td>
                                        <span t-field="o.ref"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                        <t t-if="o.doctor_ids">
                            <h3>Doctors</h3>
                            <table class="tale table-sm o_main_table" name="primary_doctor">
                                <thead>
                                    <tr>
                                        <th name="th_doctor" class="text_left"><span>Doctor</span></th>
                                        <th name="th_ref" class="text_left">Patient ref</th>
                                    </tr>
                                </thead>
                                <t t-set="doctor_count" t-value="0"/>
                                <t t-foreach="o.doctor_ids" t-as="doctor">
                                    <t t-set="doctor_count" t-value="doctor_count + 1"/>
                                    <tr>
                                        <td>
                                            <span t-field="doctor.name"/>
                                        </td>
                                        <td>
                                            <span t-field="o.ref"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2">
                                        <strong>Total Doctors</strong>
                                    </td>
                                    <td>
                                        <t t-esc="doctor_count"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </t>
  </template>
</odoo>